{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build solution",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O3",
                "main.cpp",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                // "panel": "new"
            }
        },
        {
            "label": "Build solution",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-O3",
                "main.cpp",
                "-o",
                "main.exe"  
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                // "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "${workspaceRoot}",
                "-G",
                // "MinGW Makefiles",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug .."
            ],
        },
        {
            "label": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            // "command": "mingw32-make",
            "command": "make",
            "args": [
                "-j",
                "8"
            ],
            "dependsOn":["cmake"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}